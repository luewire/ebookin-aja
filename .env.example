# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!
#
# For Vercel deployment, set these in:
# Project Settings → Environment Variables
# ============================================

# ============================================
# DATABASE
# ============================================
# 1. Main connection (Pooled) - Used for the website
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# 2. Direct connection (Unpooled) - Used for migrations/pushes
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require"

# ============================================
# FIREBASE AUTHENTICATION
# ============================================
# Firebase Admin (Server-side only - NEVER expose to client)
FIREBASE_PROJECT_ID="your_project_id"
FIREBASE_CLIENT_EMAIL="your_service_account@project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n"

# Firebase Client (Public - safe to expose)
NEXT_PUBLIC_FIREBASE_API_KEY="your_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your_project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your_project_id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your_project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"

# ============================================
# PAYMENT GATEWAY (IPAYMU)
# ============================================
# Get VA and API Key from: https://my.ipaymu.com/integration (for production)
# or https://sandbox.ipaymu.com/integration (for sandbox)
IPAYMU_VA="your_virtual_account"
IPAYMU_API_KEY="your_api_key"
IPAYMU_IS_PRODUCTION="false"

# Application URL (required for iPaymu callback/redirect URLs)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# FILE UPLOAD (CLOUDINARY)
# ============================================
# Get credentials from: https://cloudinary.com/console
# Used for banner images and user profile photos
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# DEPLOYMENT NOTES
# ============================================
# 
# LOCAL DEVELOPMENT:
# 1. Copy this file to .env
# 2. Fill in your actual credentials
# 3. Never commit .env to git (it's in .gitignore)
#
# VERCEL DEPLOYMENT:
# 1. Go to Project Settings → Environment Variables
# 2. Add each variable with its actual value
# 3. Deploy or redeploy your project
# 3. Set for Production, Preview, and Development as needed
# 4. Never store secrets in git, even in Vercel config files
#
# SECURITY CHECKLIST:
# ✅ .env.local is in .gitignore
# ✅ SERVICE_ROLE_KEY only used in /app/api/* routes
# ✅ NEXT_PUBLIC_* prefix only on safe, public values
# ✅ No hardcoded secrets in code
# ✅ Secrets stored in Vercel Environment Variables
# ============================================
