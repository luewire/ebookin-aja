generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated-prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String            @id @default(cuid())
  firebaseUid     String            @unique
  email           String            @unique
  name            String?
  photoUrl        String?
  role            UserRole          @default(USER)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  readingLogs     ReadingLog[]
  readingProgress ReadingProgress[]
  readlist        Readlist[]
  subscription    Subscription?
  annotations     Annotation[]

  @@index([firebaseUid])
  @@index([email])
  @@index([role])
}

model Subscription {
  id            String             @id @default(cuid())
  userId        String             @unique
  status        SubscriptionStatus @default(PENDING)
  planName      String
  startDate     DateTime?
  endDate       DateTime?
  orderId       String?            @unique
  transactionId String?
  grossAmount   Int?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]

  @@index([userId])
  @@index([status])
  @@index([endDate])
}

model Transaction {
  id                String            @id @default(cuid())
  subscriptionId    String
  orderId           String            @unique
  transactionStatus TransactionStatus
  grossAmount       Int
  paymentType       String?
  transactionTime   DateTime?
  settlementTime    DateTime?
  webhookPayload    Json?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  subscription      Subscription      @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([subscriptionId])
  @@index([transactionStatus])
}

model Ebook {
  id              String            @id @default(cuid())
  title           String
  author          String
  description     String?
  coverUrl        String?
  pdfUrl          String?
  publicId        String?
  category        String
  categoryId      Int?
  isPremium       Boolean           @default(true)
  isActive        Boolean           @default(true)
  priority        Int               @default(0)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  readingLogs     ReadingLog[]
  readingProgress ReadingProgress[]
  readlist        Readlist[]
  annotations     Annotation[]
  categoryRel     Category?         @relation(fields: [categoryId], references: [id])

  @@index([isActive])
  @@index([isPremium])
  @@index([category])
  @@index([categoryId])
  @@index([priority])
}

model Category {
  id           Int      @id @default(autoincrement())
  name         String
  slug         String   @unique
  icon         String?
  description  String?
  displayOrder Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  ebooks       Ebook[]

  @@index([isActive])
  @@index([displayOrder])
}

model Banner {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  ctaLabel  String?
  ctaLink   String?
  imageUrl  String?
  isActive  Boolean  @default(true)
  priority  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([priority])
}

model ReadingLog {
  id         String   @id @default(cuid())
  userId     String
  ebookId    String
  startedAt  DateTime @default(now())
  lastReadAt DateTime @default(now())
  ebook      Ebook    @relation(fields: [ebookId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ebookId])
  @@index([userId])
  @@index([ebookId])
  @@index([lastReadAt])
}

model AdminEvent {
  id          String   @id @default(cuid())
  type        String
  title       String
  description String?
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}

model ReadingProgress {
  id              String   @id @default(cuid())
  userId          String
  ebookId         String
  currentLocation String?
  progress        Float    @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  ebook           Ebook    @relation(fields: [ebookId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ebookId])
  @@index([userId])
  @@index([ebookId])
}

model Annotation {
  id        String   @id @default(cuid())
  userId    String
  ebookId   String
  cfiRange  String // Range in EPUB
  text      String // The text being highlighted
  type      String // 'highlight' or 'bold'
  color     String? // Optional color
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  ebook     Ebook    @relation(fields: [ebookId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([ebookId])
}

model Readlist {
  id        String         @id @default(cuid())
  userId    String
  ebookId   String
  status    ReadlistStatus @default(WANT_TO_READ)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  ebook     Ebook          @relation(fields: [ebookId], references: [id], onDelete: Cascade)
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ebookId])
  @@index([userId])
  @@index([ebookId])
  @@index([status])
}

enum UserRole {
  USER
  ADMIN
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
  PENDING
}

enum TransactionStatus {
  PENDING
  SETTLEMENT
  EXPIRE
  CANCEL
  DENY
}

enum ReadlistStatus {
  WANT_TO_READ
  READING
  FINISHED
}
