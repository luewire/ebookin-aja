generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String            @id @default(cuid())
  firebaseUid     String            @unique
  email           String            @unique
  name            String?
  photoUrl        String?
  role            UserRole          @default(USER)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  bio             String?
  readingGoal     Int?              @default(25)
  username        String?           @unique
  favoriteGenre   String?
  annotations     Annotation[]
  following       Follow[]          @relation("following")
  followers       Follow[]          @relation("followers")
  notifications   Notification[]
  readingLogs     ReadingLog[]
  readingProgress ReadingProgress[]
  readlist        Readlist[]
  reviews         Review[]
  subscription    Subscription?

  @@index([firebaseUid])
  @@index([email])
  @@index([username])
  @@index([role])
}

model Follow {
  followerId  String
  followingId String
  createdAt   DateTime @default(now())
  follower    User     @relation("following", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("followers", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model Subscription {
  id            String             @id @default(cuid())
  userId        String             @unique
  status        SubscriptionStatus @default(PENDING)
  planName      String
  startDate     DateTime?
  endDate       DateTime?
  orderId       String?            @unique
  transactionId String?
  grossAmount   Int?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions  Transaction[]

  @@index([userId])
  @@index([status])
  @@index([endDate])
}

model Transaction {
  id                String            @id @default(cuid())
  subscriptionId    String
  orderId           String            @unique
  transactionStatus TransactionStatus
  grossAmount       Int
  paymentType       String?
  transactionTime   DateTime?
  settlementTime    DateTime?
  webhookPayload    Json?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  subscription      Subscription      @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([subscriptionId])
  @@index([transactionStatus])
}

model Category {
  id           Int      @id @default(autoincrement())
  name         String
  slug         String   @unique
  icon         String?
  description  String?
  displayOrder Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  ebooks       Ebook[]

  @@index([isActive])
  @@index([displayOrder])
}

model Ebook {
  id              String            @id @default(cuid())
  title           String
  author          String
  description     String?
  coverUrl        String?
  pdfUrl          String?
  publicId        String?
  isPremium       Boolean           @default(true)
  isActive        Boolean           @default(true)
  priority        Int               @default(0)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  categoryId      Int
  annotations     Annotation[]
  category        Category          @relation(fields: [categoryId], references: [id])
  readingLogs     ReadingLog[]
  readingProgress ReadingProgress[]
  readlist        Readlist[]
  reviews         Review[]

  @@index([isActive])
  @@index([isPremium])
  @@index([categoryId])
  @@index([priority])
}

model Banner {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  ctaLabel  String?
  ctaLink   String?
  imageUrl  String?
  isActive  Boolean  @default(true)
  priority  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([isActive])
  @@index([priority])
}

model ReadingLog {
  id         String   @id @default(cuid())
  userId     String
  ebookId    String
  startedAt  DateTime @default(now())
  lastReadAt DateTime @default(now())
  ebook      Ebook    @relation(fields: [ebookId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ebookId])
  @@index([userId])
  @@index([ebookId])
  @@index([lastReadAt])
}

model AdminEvent {
  id          String   @id @default(cuid())
  type        String
  title       String
  description String?
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}

model ReadingProgress {
  id              String   @id @default(cuid())
  userId          String
  ebookId         String
  currentLocation String?
  progress        Float    @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  ebook           Ebook    @relation(fields: [ebookId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ebookId])
  @@index([userId])
  @@index([ebookId])
}

model Annotation {
  id        String   @id @default(cuid())
  userId    String
  ebookId   String
  cfiRange  String
  text      String
  type      String
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ebook     Ebook    @relation(fields: [ebookId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([ebookId])
}

model Readlist {
  id        String         @id @default(cuid())
  userId    String
  ebookId   String
  status    ReadlistStatus @default(WANT_TO_READ)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  ebook     Ebook          @relation(fields: [ebookId], references: [id], onDelete: Cascade)
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ebookId])
  @@index([userId])
  @@index([ebookId])
  @@index([status])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  ebookId   String
  rating    Int      @default(0)
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ebook     Ebook    @relation(fields: [ebookId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ebookId])
  @@index([userId])
  @@index([ebookId])
  @@index([rating])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String?
  link      String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([isRead])
}

enum UserRole {
  USER
  ADMIN
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
  PENDING
}

enum TransactionStatus {
  PENDING
  SETTLEMENT
  EXPIRE
  CANCEL
  DENY
}

enum ReadlistStatus {
  WANT_TO_READ
  READING
  FINISHED
}

enum NotificationType {
  FOLLOW
  MUTUAL_FOLLOW
  BOOK_RELEASE
  AUTHOR_UPDATE
  CATEGORY_UPDATE
}
